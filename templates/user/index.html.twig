{% extends 'base.html.twig' %}

{% block title %}{% trans %}Users{% endtrans %}{% endblock %}

{% block body %}
    <h1>{% trans %}Users{% endtrans %}</h1>

    <table class="table">
        <thead>
            <tr>
                <th>{% trans %}Email{% endtrans %}</th>
                <th>{% trans %}Roles{% endtrans %}</th>
                <th>#</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.email }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>
                    <a href="{{ path('user_edit', {'id': user.id}) }}" class="btn btn-secondary btn-sm">
                        {% trans %}edit{% endtrans %}
                    </a>
                    <a href="{{ path('user_delete', {'id': user.id}) }}" class="btn btn-danger btn-sm">
                        {% trans %}delete{% endtrans %}
                    </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">{% trans %}No users found{% endtrans %}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('user_new') }}" class="btn btn-primary">{% trans %}Create new{% endtrans %}</a>
{% endblock %}
