{% extends 'base.html.twig' %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block title %}{% trans %}New user{% endtrans %}{% endblock %}

{% block body %}
    <h1>{% trans %}Create new User{% endtrans %}</h1>

    {{ form_start(form) }}
    <div class="form-group row">
        <div class="field col-md-12">
        {{ form_label(form.email) }}
        {{ form_widget(form.email) }}
        </div>
    </div>
    <div class="form-group row">
        <div class="field col-md-12">
        {{ form_label(form.roles) }}
        {{ form_widget(form.roles) }}
        </div>
    </div>

    {% if form.password is defined %}
        <div class="form-group row">
            <div class="field col-md-12">
                {{ form_label(form.password) }}
                {{ form_widget(form.password) }}
            </div>
        </div>
    {% endif %}
    <div class="form-group row">
        <div class="field col-md-12">
            <button class="btn btn-success">{% trans %}Save{% endtrans %}</button>
            <a href="{{ path('user_index') }}" class="btn btn-light">{% trans %}Back to list{% endtrans %}</a>
        </div>
    </div>
    {{ form_end(form) }}


{% endblock %}
